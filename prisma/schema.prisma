generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Check Database diagram here: https://dbdiagram.io/d/trendies-task-686d0734f413ba3508d541bb

//Basic user table
model User {
  id          Int @id @default(autoincrement())
  email       String @unique
  password    String
  role        String   // buyer | seller | admin
  status      String   // active | suspended | deleted
  points      Int      @default(0)
  referralCode String? 
  referredBy   String?
  authToken    String?
}

