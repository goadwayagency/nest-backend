generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           String     @id @default(uuid())
  email        String     @unique
  password     String
  role         UserRole   @default(BUYER)
  status       UserStatus @default(PENDING_APPROVAL)
  points       Int        @default(0)
  referralCode String?
  referredBy   String?
  authToken    String?    @db.VarChar(255)

  // Products the user is selling
  products Product[] @relation("SellerProducts")

  // Bids the user made
  bids Bid[] @relation("BuyerBids")

  // Chat messages sent/received
  sentChats     ChatMessage[] @relation("FromUserChats")
  receivedChats ChatMessage[] @relation("ToUserChats")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  notifications Notification[]

  @@map("users")
}

enum UserRole {
  BUYER
  SELLER
  ADMIN
}

enum UserStatus {
  ACTIVE
  PENDING_APPROVAL
  SUSPENDED
  DELETED
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  type      String
  payload   Json?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@map("notifications")
}

model Product {
  id          String              @id @default(uuid())
  title       String
  description String?
  price       Float
  status      ProductStatus       @default(AVAILABLE)
  sellerId    String
  seller      User                @relation("SellerProducts", fields: [sellerId], references: [id])
  bids        Bid[]
  chats       ChatMessage[]
  reservation ProductReservation?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("products")
}

enum ProductStatus {
  AVAILABLE
  RESERVED
  SOLD
}

model Bid {
  id        String    @id @default(uuid())
  productId String
  buyerId   String
  amount    Float
  status    BidStatus @default(PENDING)

  product     Product             @relation(fields: [productId], references: [id])
  buyer       User                @relation("BuyerBids", fields: [buyerId], references: [id])
  reservation ProductReservation? @relation(name: "BidReservation")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("bids")
}

enum BidStatus {
  PENDING
  ACCEPTED
  REJECTED
}

model ChatMessage {
  id         String   @id @default(uuid())
  productId  String
  fromUserId String
  toUserId   String?
  message    String
  createdAt  DateTime @default(now())

  product  Product @relation(fields: [productId], references: [id])
  fromUser User    @relation("FromUserChats", fields: [fromUserId], references: [id])
  toUser   User?   @relation("ToUserChats", fields: [toUserId], references: [id])

  @@map("chat_messages")
}

model ProductReservation {
  id        String   @id @default(uuid())
  productId String   @unique
  bidId     String   @unique
  expiresAt DateTime

  product Product @relation(fields: [productId], references: [id])
  bid     Bid     @relation(fields: [bidId], references: [id], name: "BidReservation")

  @@map("product_reservations")
}
